{% extends 'base.html.twig' %}

{% block title %}Province{% endblock %}

{% block body %}
    <div class="box-header">Province</div><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_province.id }}</td>
            </tr>
            <tr>
                <th>nom</th>
                <td>{{ ct_province.prvNom }}</td>
            </tr>
            <tr>
                <th>code</th>
                <td>{{ ct_province.prvCode }}</td>
            </tr>
            <tr>
                <th>created_at</th>
                <td>{{ ct_province.prvCreatedAt ? ct_province.prvCreatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>updated_at</th>
                <td>{{ ct_province.prvUpdatedAt ? ct_province.prvUpdatedAt|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
	
	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_province_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_province_edit', {'id': ct_province.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_province/_delete_form.html.twig') }}  
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
