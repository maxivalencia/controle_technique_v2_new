{% extends 'base.html.twig' %}

{% block title %}Liste Province{% endblock %}

{% block body %}
    <div class="box-header">Liste Province</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>nom</th>
                <th>code</th>
                <th>created_at</th>
                <th>updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_province in ct_provinces %}
            <tr>
                <td>{{ ct_province.id }}</td>
                <td>{{ ct_province.prvNom }}</td>
                <td>{{ ct_province.prvCode }}</td>
                <td>{{ ct_province.prvCreatedAt ? ct_province.prvCreatedAt|date('d/m/Y') : '' }}</td>
                <td>{{ ct_province.prvUpdatedAt ? ct_province.prvUpdatedAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_ct_province_show', {'id': ct_province.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_province_edit', {'id': ct_province.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_provinces) }}
    </div> #}

    <a href="{{ path('app_ct_province_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
