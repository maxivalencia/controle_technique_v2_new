{% extends 'base.html.twig' %}

{% block title %}Constatation{% endblock %}

{% block body %}
    <div class="box-header">Constatation</div><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_const_av_ded.id }}</td>
            </tr>
            <tr>
                <th>provenance</th>
                <td>{{ ct_const_av_ded.cadProvenance }}</td>
            </tr>
            <tr>
                <th>divers</th>
                <td>{{ ct_const_av_ded.cadDivers }}</td>
            </tr>
            <tr>
                <th>nom propriétaire</th>
                <td>{{ ct_const_av_ded.cadProprietaireNom }}</td>
            </tr>
            <tr>
                <th>adresse propriétaire</th>
                <td>{{ ct_const_av_ded.cadProprietaireAdresse }}</td>
            </tr>
            <tr>
                <th>état</th>
                <td>{{ ct_const_av_ded.cadBonEtat ? 'Bon' : 'Mauvais' }}</td>
            </tr>
            <tr>
                <th>sécurité personne</th>
                <td>{{ ct_const_av_ded.cadSecPers ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>sécurité marchandise</th>
                <td>{{ ct_const_av_ded.cadSecMarch ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>protection environnement</th>
                <td>{{ ct_const_av_ded.cadProtecEnv ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>numéro</th>
                <td>{{ ct_const_av_ded.cadNumero }}</td>
            </tr>
            <tr>
                <th>immatriculation</th>
                <td>{{ ct_const_av_ded.cadImmatriculation }}</td>
            </tr>
            <tr>
                <th>date d'embarquement</th>
                <td>{{ ct_const_av_ded.cadDateEmbarquement ? ct_const_av_ded.cadDateEmbarquement|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>lieu d'embarquement</th>
                <td>{{ ct_const_av_ded.cadLieuEmbarquement }}</td>
            </tr>
            <tr>
                <th>created</th>
                <td>{{ ct_const_av_ded.cadCreated ? ct_const_av_ded.cadCreated|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>observation</th>
                <td>{{ ct_const_av_ded.cadObservation }}</td>
            </tr>
            <tr>
                <th>conforme</th>
                <td>{{ ct_const_av_ded.cadConforme ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>est-active</th>
                <td>{{ ct_const_av_ded.cadIsActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>généré</th>
                <td>{{ ct_const_av_ded.cadGenere }}</td>
            </tr>
            <tr>
                <th>généré</th>
                <td>{{ ct_const_av_ded.ctUtilisationId}}</td>
            </tr>
        </tbody>
    </table>

	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_const_av_ded_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_const_av_ded_edit', {'id': ct_const_av_ded.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_const_av_ded/_delete_form.html.twig') }}   
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
