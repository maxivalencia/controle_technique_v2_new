{% extends 'base.html.twig' %}

{% block title %}Liste Tarif Genre{% endblock %}

{% block body %}
    <div class="box-header">Liste Tarif Genre</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>prix</th>
                <th>année</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_genre_tarif in ct_genre_tarifs %}
            <tr>
                <td>{{ ct_genre_tarif.id }}</td>
                <td>{{ ct_genre_tarif.grtPrix }}</td>
                <td>{{ ct_genre_tarif.grtAnnee ? ct_genre_tarif.grtAnnee|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_ct_genre_tarif_show', {'id': ct_genre_tarif.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_genre_tarif_edit', {'id': ct_genre_tarif.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_genre_tarifs) }}
    </div> #}

    <a href="{{ path('app_ct_genre_tarif_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
