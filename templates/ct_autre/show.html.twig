    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_autre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ct_autre.nom }}</td>
            </tr>
