                            <td align="center" style="border:1px solid black;border-collapse : collapse;">{{ lst_brd.numero }}</td>
                            <td align="left" style="border:1px solid black;border-collapse : collapse;">{{ lst_brd.designation }}</td>
                            <td align="left"style="border:1px solid black;border-collapse : collapse;">{{ lst_brd.unite }}</td>
                            <td align="right" style="border:1px solid black;border-collapse : collapse;">{{ lst_brd.quantite }}</td>
                            <td align="left" style="border:1px solid black;border-collapse : collapse;">{{ lst_brd.observation }}</td>
