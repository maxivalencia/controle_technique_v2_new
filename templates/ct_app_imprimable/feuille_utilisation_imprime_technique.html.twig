                    <td align="center" style="border: 1px solid black;border-collapse: collapse;">{{ ct_imprime_tech_use.cim_32 }}</td>
                    <td align="center" style="border: 1px solid black;border-collapse: collapse;">{{ ct_imprime_tech_use.cim_32_bis }}</td>
                    <td align="center" style="border: 1px solid black;border-collapse: collapse;">{{ ct_imprime_tech_use.plaque_chassis }}</td>
                    <td align="center" style="border: 1px solid black;border-collapse: collapse;">{{ ct_imprime_tech_use.adm }}</td>
