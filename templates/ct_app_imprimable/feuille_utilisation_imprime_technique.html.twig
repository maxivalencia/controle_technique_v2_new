                    <td width="{{ col4 }}px" valign="top" align="right"><strong>Caractéristique : </strong></td>
                    <td width="{{ col5 }}px" valign="top" align="left"><strong>{{ nombre_caracteristique }}</strong></td>
                    <td width="{{ col4 }}px" valign="top" align="right"><strong>Constatation : </strong></td>
                    <td width="{{ col5 }}px" valign="top" align="left"><strong>{{ nombre_constatation }}</strong></td>
