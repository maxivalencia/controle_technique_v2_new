                    <td valign="top" align="left">Carte rouge utilisé :</td>
                    <td valign="top" align="right"><strong>{{ nombre_cr }}</strong></td>
                    <td valign="top" align="right"><strong>(10) -</strong></td>
                    <td valign="top" align="left">Carte auto-école utilisé :</td>
                    <td valign="top" align="right"><strong>{{ nombre_cae }}</strong></td>
                    <td valign="top" align="right"><strong>(11) -</strong></td>
                    <td valign="top" align="left">CIM 31 utilisé :</td>
                    <td valign="top" align="right"><strong>{{ nombre_cim_31 }}</strong></td>
                    <td valign="top" align="right"><strong>(12) -</strong></td>
                    <td valign="top" align="left">CIM 31 Bis utilisé :</td>
                    <td valign="top" align="right"><strong>{{ nombre_cim_31_bis }}</strong></td>
                </tr>
                <tr>
                    <td valign="top" align="right"><strong>(13) -</strong></td>
                    <td valign="top" align="left">CIM 32 utilisé :</td>
