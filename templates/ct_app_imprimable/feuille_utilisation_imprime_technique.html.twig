                <td align="center" valign="middle" width="30" style="border: 1px solid black;border-collapse: collapse;"><strong><i>CJ<br>(7)</i></strong></td>
                <td align="center" valign="middle" width="30" style="border: 1px solid black;border-collapse: collapse;"><strong><i>CJBR<br>(8)</i></strong></td>
                <td align="center" valign="middle" width="30" style="border: 1px solid black;border-collapse: collapse;"><strong><i>CR<br>(9)</i></strong></td>
                <td align="center" valign="middle" width="30" style="border: 1px solid black;border-collapse: collapse;"><strong><i>CAE<br>(10)</i></strong></td>
                <td align="center" valign="middle" width="30" style="border: 1px solid black;border-collapse: collapse;"><strong><i>CIM31<br>(11)</i></strong></td>
