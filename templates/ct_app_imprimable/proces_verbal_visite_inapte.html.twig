                        {# <img src="{{ logo }}" alt="logo" width="50px" height="50px" type="images/png"> #}
                        <img src="{{ logo }}" alt="logo" width="25px" height="25px" type="images/png">
                        <br>« LAHITOKANA NY AINA » 
                        <br>
                        <br>
                        <div style="font-size:12px"><strong>De : </strong>{{ ct_visite.nom }}</div><br>
                        <div style="font-size:12px"><strong>ADRESSE : </strong>{{ ct_visite.adresse }}<strong> Tél. : </strong>{{ ct_visite.telephone }}</div><br>
                        <div style="font-size:12px"><strong> Pour visite technique avec ou sans carnet du véhicule {{ ct_visite.immatriculation }}</strong></div>
                        <br><br>
                        <table style="font-size:14px">
                            <tr>
                                <td width="200px" style="margin-top:20px;margin-bottom:20px"><strong>USAGE EFFECTIF</strong><br></td>
                                <td><strong> : </strong>{{ ct_visite.usage }}</td>
                            </tr>
                            <tr>
                                <td><strong>PLACE DEBOUT</strong></td>
                                <td><strong> : </strong>{{ ct_visite.nbr_debout|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>PTAC</strong><br></td>
                                <td><strong> : </strong>{{ ct_visite.ptac|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>DROIT</strong></td>
                                <td><strong> : </strong>Ar {{ total_des_droits|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>CARNET D'ENTRETIEN</strong></td>
                                <td><strong> : </strong>Ar {{ total_des_carnets|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>CARTE</strong><br></td>
                                <td><strong> : </strong>Ar {{ total_des_cartes|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>PV</strong></td>
                                <td><strong> : </strong>Ar {{ total_des_prix_pv|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>THT</strong></td>
                                <td><strong> : </strong>Ar {{ total_des_tht|number_format(0, ',', ' ') }}</td>
                            </tr>
                            <tr>
                                <td><strong>TVA</strong><br><br></td>
                                <td><strong> : </strong>Ar {{ total_des_tva|number_format(0, ',', ' ') }}</td>
                            </tr>
                        </table>
                        <br><br><hr>
                        <table style="font-size:14px">
                            <tr>
                                <td width="200px" style="font-size:16px"><strong>NET A PAYER</strong></td>
                                <td style="font-size:16px"><strong> : Ar {{ montant_total|number_format(0, ',', ' ') }}</strong></td>
                            </tr>
                        </table>
                    </td>
                    
                    <td width="275" align="center" valign="top" style="font-size:12px;border:1px solid black;padding-left:10px;padding-right:10px;padding-top:20px;">
                        {% set trans_day_hash = { 
                                "January": "Janvier", 
                                "February": "Février", 
                                "March": "Mars", 
                                "April": "Avril", 
                                "May": "Mai", 
                                "June": "Juin", 
                                "July": "Juillet",
                                "August": "Août",
                                "September": "Septembre",
                                "October": "Octobre",
                                "November": "Novembre",
                                "December": "Décembre" 
                            } 
                        %}
                        <strong>REPOBLIKAN’I MADAGASIKARA</strong><br>
                        <i>Fitiavana - Tanindrazana - Fandrosoana</i>
                        <br>--------------------------<br><br>
                        <br><br>
                        <div style="font-size:14px;"><strong>RECU N° : {{ ct_visite.pv }}</strong></div><br>
                        <div style="font-size:14px;"><strong>Date : </strong>{{ ct_visite.date|date('d') }} {{ trans_day_hash[ct_visite.date|date('F')] }} {{ ct_visite.date|date('Y') }}</div>
                        <br><br><br><br>
                        <div align="left" style="font-size:14px;"><strong>NET A PAYER : Ar {{ montant_total|number_format(0, ',', ' ') }}</strong></div><br><br>
                        <div align="left" style="font-size:9px;"><i><strong>PRIERE DE VOUS MUNIR DE LA PRESENTE PV LORS DE LA « CONTRE VISITE »</strong></i></div><br>
                        <div align="left" style="font-size:9px;"><i><strong>ENTO ITY TARATASY ITY REHEFA HANAO « CONTRE VISITE »</strong></i></div><br>
                        <div align="center" style="font-size:14px;"><strong><u>Le Chef de Centre</u><strong></div>
                    </td>
                </tr>
                <tr align="center" style="border:1px solid black;font-size:20px">
                    <td colspan="2"><strong>{{ ct_visite.aptitude }}</strong></td>
                </tr>
                <tr height="300px" align="left" style="border:1px solid black;font-size:12px">
                    <td height="300px" valign="top" align="left" colspan="2">
                        <br>
                        <div style="font-size:14px;"><strong>ANOMALIE(S) CONSTATEE(S) :</strong></div>
                        <div>
                            {% for anomalie in visite.vstAnomalieId %}
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ anomalie.anmlLibelle }}<br>
                            {% else %}
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Aucune anomalie trouvé
                            {% endfor %}
                        </div>
                    </td>
                </tr>
                <tr align="center" style="font-size:12px">
                    <td colspan="2">
                        <table>
                            <tr>
                                <td style="border-right:1px solid black;border-collapse: collapse;" height="100px" valign="middle" align="left" width="280px">
                                    Nom du vérificateur : {{ ct_visite.verificateur }}<br>
                                    Opérateur : {{ ct_visite.operateur }}
                                </td>
                                <td style="border-right:1px solid black;border-collapse: collapse;" height="100px" valign="middle" align="left" width="280px">
                                    APTITUDE <strong> : <span style="font-size:20px;">{{ ct_visite.aptitude }}</span></strong><br><br>
                                    <strong> Délai de réparation accordée :  {{ ct_visite.reparation }}</strong>
                                </td>
                                <td style="border:0px solid black;border-collapse: collapse;" height="100px" width="151px">
                                </td>
                            </tr>
                        </table>
                    </td>
