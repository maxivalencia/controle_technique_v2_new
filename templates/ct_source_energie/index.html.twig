{% extends 'base.html.twig' %}

{% block title %}Liste Source d'Energie{% endblock %}

{% block body %}
    <div class="box-header">Liste Source d'Energie</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_source_energie in ct_source_energies %}
            <tr>
                <td>{{ ct_source_energie.id }}</td>
                <td>{{ ct_source_energie.sreLibelle }}</td>
                <td>
                    <a href="{{ path('app_ct_source_energie_show', {'id': ct_source_energie.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_source_energie_edit', {'id': ct_source_energie.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_source_energies) }}
    </div> #}

    <a href="{{ path('app_ct_source_energie_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
