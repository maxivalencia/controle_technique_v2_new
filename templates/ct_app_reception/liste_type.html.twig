{% extends 'base.html.twig' %}

{% block title %}Liste des types{% endblock %}

{% block app_ct %}

<div class="box">
    <div class="box-header">TOTAL TYPE RECEPTION : {{ total }}</div><br>
    <div>
        <div>
            <a href="{{ path('app_ct_app_reception_creer_type') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un type de réception</a>
        </div>
        <div class="marge-elts">
            <table class="table liste">
                <thead>
                    <tr>
                        <th>Libellé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ct_type_reception in ct_type_receptions %}
                    <tr>
                        <td>{{ ct_type_reception.tprcpLibelle }}</td>
                        <td>
                            <a href="{{ path('app_ct_app_reception_voir_type', {'id': ct_type_reception.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                            <a href="{{ path('app_ct_app_reception_edit_type', {'id': ct_type_reception.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <a href="{{ path('app_ct_app_reception_creer_type') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un type de réception</a>
        </div>  
    </div>
</div>
{% endblock %}
