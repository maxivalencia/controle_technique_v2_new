{% extends 'base.html.twig' %}

{% block title %}Duplicata réception{% endblock %}

{% block app_ct %}
<div class="box">
    <div class="box-header">DUPLICATA RECEPTION</div><br>
</div>
<div class="box">
    <div class="entete-formulaire">Recherche</div><br>
    <div>
        <table class="table" style="width:100%;">
            <tbody>
                <tr>
                    <td style="width:50%;">
                        <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_reception_recherche_reception_duplicata') }}">
                            <div class="">
                                <strong>Par numéro d'immatriculation :</strong><br>
                                <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
                                <input type="text" name="search-immatriculation" id="search-immatriculation" class="form-control" placeholder="numéro d'immatriculation...">
                                <button class="btn btn-primary" type="submit" style="float:right">
                                    Rechercher
                                </button>
                            </div>
                        </form>
                    </td>
                    <td style="width:50%;">
                        <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_reception_recherche_reception_duplicata') }}">
                            <div class="">
                                <strong>Par numéro dans la série du type :</strong><br>
                                <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
                                <input type="text" name="search-numero-serie" id="search-numero-serie" class="form-control" placeholder="numéro de série...">
                                <button class="btn btn-primary" type="submit" style="float:right">
                                    Rechercher
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{{ form_start(form_reception) }}
    <table class="table bordure" style="width:100%;">
        <tbody>
            <tr>
                <td style="width:50%;">
                    <div class="box">
                        <div class="entete-formulaire">Informations véhicule</div><hr>
                        {# {{ form_row(form_reception.rcp_num_pv) }} #}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_type) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_num_serie) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_num_moteur) }}
                        {{ form_row(form_reception.rcp_immatriculation) }}
                        {{ form_row(form_reception.ct_vehicule_id.ct_genre_id) }}
                        {{ form_row(form_reception.ct_vehicule_id.ct_marque_id) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_cylindre) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_puissance) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_charge_utile) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_poids_vide) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_poids_total_charge) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_longueur) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_largeur) }}
                        {{ form_row(form_reception.ct_vehicule_id.vhc_hauteur) }}
                    </div>
                </td>
                <td style="width:50%;">
                    <div class="box">
                        <div class="entete-formulaire">Informations réception</div><hr>
                        {# {{ form_row(form_reception.ct_type_reception_id) }} #}
                        {{ form_row(form_reception.ct_source_energie_id) }}
                        {{ form_row(form_reception.ct_carrosserie_id) }}
                        {{ form_row(form_reception.rcp_nbr_assis) }}
                        {{ form_row(form_reception.rcp_ngr_debout) }}
                        {{ form_row(form_reception.rcp_mise_service) }}
                        {{ form_row(form_reception.ct_motif_id) }}
                        {{ form_row(form_reception.rcp_proprietaire) }}
                        {{ form_row(form_reception.rcp_adresse) }}
                        {{ form_row(form_reception.rcp_profession) }}
                        {{ form_row(form_reception.ct_utilisation_id) }}
                        {{ form_row(form_reception.ct_verificateur_id) }}
                    </div>
                </td>
            </tr>
        </tbody>
    </table> 
    <div class="box">
        {# <button class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> {{ button_label|default('Dupliquer') }}</button> #}
        {% if id is not null %}
            <a href="{{ path('app_ct_app_imprimable_proces_verbal_reception_duplicata', {'id': id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Dupliquer</a>
        {% endif %}
    </div>
{{ form_end(form_reception) }}
{% endblock %}
