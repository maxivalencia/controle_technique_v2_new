{% extends 'base.html.twig' %}

{% block title %}Liste Carrosserie{% endblock %}

{% block body %}
    <div class="box-header">Liste Carrosserie</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_carrosserie in ct_carrosseries %}
            <tr>
                <td>{{ ct_carrosserie.id }}</td>
                <td>{{ ct_carrosserie.crsLibelle }}</td>
                <td>
                    <a href="{{ path('app_ct_carrosserie_show', {'id': ct_carrosserie.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_carrosserie_edit', {'id': ct_carrosserie.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_carrosseries) }}
    </div> #}

    <a href="{{ path('app_ct_carrosserie_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
