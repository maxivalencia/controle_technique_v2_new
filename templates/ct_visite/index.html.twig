{% extends 'base.html.twig' %}

{% block title %}Liste Visite{% endblock %}

{% block body %}
    <div class="box-header">Liste Visite</div><br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>num pv</th>
                <th>num feuille de caisse</th>
                <th>date d'expiration</th>
                <th>created</th>
                <th>updated</th>
                <th>est apte</th>
                <th>est contre visite</th>
                <th>durée de reparation</th>
                <th>est active</th>
                <th>généré</th>
                <th>observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_visite in ct_visites %}
            <tr>
                <td>{{ ct_visite.id }}</td>
                <td>{{ ct_visite.vstNumPv }}</td>
                <td>{{ ct_visite.vstNumFeuilleCaisse }}</td>
                <td>{{ ct_visite.vstDateExpiration ? ct_visite.vstDateExpiration|date('d/m/Y') : '' }}</td>
                <td>{{ ct_visite.vstCreated ? ct_visite.vstCreated|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ ct_visite.vstUpdated ? ct_visite.vstUpdated|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ ct_visite.vstIsApte ? 'Oui' : 'Non' }}</td>
                <td>{{ ct_visite.vstIsContreVisite ? 'Oui' : 'Non' }}</td>
                <td>{{ ct_visite.vstDureeReparation }}</td>
                <td>{{ ct_visite.vstIsActive ? 'Oui' : 'Non' }}</td>
                <td>{{ ct_visite.vstGenere }}</td>
                <td>{{ ct_visite.vstObservation }}</td>
                <td>
                    <a href="{{ path('app_ct_visite_show', {'id': ct_visite.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_visite_edit', {'id': ct_visite.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(ct_visites) }}
    </div>

    <a href="{{ path('app_ct_visite_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
