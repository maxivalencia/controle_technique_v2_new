{% extends 'base.html.twig' %}

{% block title %}Visite{% endblock %}

{% block body %}
    <div class="box-header">Visite</div><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_visite.id }}</td>
            </tr>
            <tr>
                <th>numéro pv</th>
                <td>{{ ct_visite.vstNumPv }}</td>
            </tr>
            <tr>
                <th>numéro feuille de caisse</th>
                <td>{{ ct_visite.vstNumFeuilleCaisse }}</td>
            </tr>
            <tr>
                <th>date expiration</th>
                <td>{{ ct_visite.vstDateExpiration ? ct_visite.vstDateExpiration|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>created</th>
                <td>{{ ct_visite.vstCreated ? ct_visite.vstCreated|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>updated</th>
                <td>{{ ct_visite.vstUpdated ? ct_visite.vstUpdated|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>est-apte</th>
                <td>{{ ct_visite.vstIsApte ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>est-contre visite</th>
                <td>{{ ct_visite.vstIsContreVisite ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>durée réparation</th>
                <td>{{ ct_visite.vstDureeReparation }}</td>
            </tr>
            <tr>
                <th>est-active</th>
                <td>{{ ct_visite.vstIsActive ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>généré</th>
                <td>{{ ct_visite.vstGenere }}</td>
            </tr>
            <tr>
                <th>observation</th>
                <td>{{ ct_visite.vstObservation }}</td>
            </tr>
        </tbody>
    </table>
	
	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_visite_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_visite_edit', {'id': ct_visite.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_visite/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
