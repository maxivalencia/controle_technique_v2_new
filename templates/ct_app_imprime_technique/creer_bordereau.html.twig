{% extends 'base.html.twig' %}

{% block title %}Création bordereau{% endblock %}

{% block app_ct %}
<div class="box">
    <div class="box-header">CREATION BORDEREAU</div><br>
</div>
<div class="box">
    {# <div class="entete-formulaire">Ajout imprimé technique</div><br> #}
    {{ form_start(form_bordereau) }}
        <table class="table bordure" style="width:100%;">
            <tbody>
                <tr>
                    <td style="width:100%;">
                        <div class="box">
                            <div class="entete-formulaire">Informations véhicule</div><hr>
                            {{ form_row(form_bordereau.bl_numero) }}
                            {{ form_row(form_bordereau.ref_expr) }}
                            {{ form_row(form_bordereau.date_ref_expr) }}
                            {{ form_row(form_bordereau.ct_centre_id) }}
                            {{ form_row(form_bordereau.ct_imprime_tech_id) }}
                            {{ form_row(form_bordereau.bl_debut_numero) }}
                            {{ form_row(form_bordereau.bl_fin_numero) }}
                        </div>
                    </td>
                </tr>
            </tbody>
        </table> 
        <div class="box">
            {# <button class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> {{ button_label|default('Enregistrer') }}</button> #}
            <table>
                <tr>
                    <td valign="bottom">
                        <button class="btn btn-success" type="submit"><i class="fa fa-book" aria-hidden="true"></i> Enregistrer</button>
                        {{ form_end(form_bordereau) }}
                    </td>
                    <td valign="bottom">
                        <a href="{{ path('app_ct_app_imprime_technique_rechercher_bordereau', {'numero' : numero }) }}" class="btn btn-success"><i class="fa fa-success" aria-hidden="true"></i> Terminer</a>
                        {# <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_imprime_technique_rechercher_bordereau') }}">                              
                            <input type="hidden" name="numero" id="numero" class="form-control" value="{{ numero }}">
                            <br>
                            <button class="btn btn-primary" type="submit" style="float:right">
                                Terminer
                            </button>
                        </form> #}
                    </td>
                </tr>
            </table>
        </div>
    {# {{ form_end(form_bordereau) }} #}
</div>
<div class="box">
    <div class="entete-formulaire">Liste des imprimés dans le bordereau</div><br>
    <div>
        <div class="marge-elts">
            <table class="table liste">
                <thead>
                    <tr>
                        {# <th>Id</th> #}
                        <th>Date</th>
                        <th>Numéro bordereau</th>
                        <th>Nom centre</th>
                        <th>Nom IT</th>
                        <th>Unité</th>
                        <th>Numéro IT</th>
                        <th>Reférence demande</th>

                        {# <th>début numéro</th>
                        <th>fin numéro</th>
                        <th>created_at</th>
                        <th>updated_at</th>
                        <th>Reférence</th>
                        <th>Date reférencer</th>
                        <th>observation</th> #}
                        {# <th>actions</th> #}
                    </tr>
                </thead>
                <tbody>
                {% for ct_bordereau in ct_bordereaus %}
                    <tr>
                        {# <td>{{ ct_bordereau.id }}</td> #}
                        <td>{{ ct_bordereau.blCreatedAt ? ct_bordereau.blCreatedAt|date('d/m/Y') : '' }}</td>
                        <td>{{ ct_bordereau.blNumero }}</td>
                        <td>{{ ct_bordereau.ctCentreId }}</td>
                        <td>{{ ct_bordereau.ctImprimeTechId }}</td>
                        <td>{{ ct_bordereau.ctImprimeTechId.uteImprimeTech }}</td>
                        <td>{{ ct_bordereau.blDebutNumero }} à {{ ct_bordereau.blFinNumero }}</td>
                        <td>{{ ct_bordereau.refExpr }}</td>
                        {# <td>{{ ct_bordereau.blDebutNumero }}</td>
                        <td>{{ ct_bordereau.blFinNumero }}</td>
                        <td>{{ ct_bordereau.blCreatedAt ? ct_bordereau.blCreatedAt|date('d/m/Y') : '' }}</td>
                        <td>{{ ct_bordereau.blUpdatedAt ? ct_bordereau.blUpdatedAt|date('d/m/Y') : '' }}</td>
                        <td>{{ ct_bordereau.refExpr }}</td>
                        <td>{{ ct_bordereau.dateRefExpr ? ct_bordereau.dateRefExpr|date('d/m/Y') : '' }}</td>
                        <td>{{ ct_bordereau.blObservation }}</td> #}
                        {# <td>
                            <a href="{{ path('app_ct_bordereau_show', {'id': ct_bordereau.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                            <a href="{{ path('app_ct_bordereau_edit', {'id': ct_bordereau.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td> #}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
