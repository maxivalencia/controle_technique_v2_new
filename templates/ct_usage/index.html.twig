{% extends 'base.html.twig' %}

{% block title %}Liste Usage{% endblock %}

{% block body %}
    <div class="box-header">Liste Usage</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>validité</th>
                <th>created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_usage in ct_usages %}
            <tr>
                <td>{{ ct_usage.id }}</td>
                <td>{{ ct_usage.usgLibelle }}</td>
                <td>{{ ct_usage.usgValidite }}</td>
                <td>{{ ct_usage.usgCreated ? ct_usage.usgCreated|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_ct_usage_show', {'id': ct_usage.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_usage_edit', {'id': ct_usage.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_usages) }}
    </div> #}

    <a href="{{ path('app_ct_usage_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
