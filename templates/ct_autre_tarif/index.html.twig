{% extends 'base.html.twig' %}

{% block title %}Liste Autre Tarif{% endblock %}

{% block body %}
    <div class="box-header">Liste Autre Tarif</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>prix</th>
                <th>arrêté</th>
                <th>date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_autre_tarif in ct_autre_tarifs %}
            <tr>
                <td>{{ ct_autre_tarif.id }}</td>
                <td>{{ ct_autre_tarif.autPrix }}</td>
                <td>{{ ct_autre_tarif.autArrete }}</td>
                <td>{{ ct_autre_tarif.autDate ? ct_autre_tarif.autDate|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_ct_autre_tarif_show', {'id': ct_autre_tarif.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_autre_tarif_edit', {'id': ct_autre_tarif.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_autre_tarifs) }}
    </div> #}

    <a href="{{ path('app_ct_autre_tarif_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
