{% extends 'base.html.twig' %}

{% block title %}Liste Rôle{% endblock %}

{% block body %}
    <div class="box-header">Liste Rôle</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_role in ct_roles %}
            <tr>
                <td>{{ ct_role.id }}</td>
                <td>{{ ct_role.roleName }}</td>
                <td>
                    <a href="{{ path('app_ct_role_show', {'id': ct_role.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_role_edit', {'id': ct_role.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_roles) }}
    </div> #}

    <a href="{{ path('app_ct_role_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
