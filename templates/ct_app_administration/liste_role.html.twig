{% extends 'base.html.twig' %}

{% block title %}Liste rôle{% endblock %}

{% block app_ct %}

<div class="box">
    <div class="box-header">Liste rôle</div><br>
    <div>
        <div>
            <a href="{{ path('app_ct_app_administration_creer_role') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un rôle</a>
        </div>
        <div class="marge-elts">
            <table class="table liste">
                <thead>
                    <tr>
                        <th>Role name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ct_role in ct_roles %}
                    <tr>
                        <td>{{ ct_role.roleName }}</td>
                        <td>
                            <a href="{{ path('app_ct_app_administration_voir_role', {'id': ct_role.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                            <a href="{{ path('app_ct_app_administration_edit_role', {'id': ct_role.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <a href="{{ path('app_ct_app_administration_creer_role') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un rôle</a>
        </div>  
    </div>
</div>
{% endblock %}
