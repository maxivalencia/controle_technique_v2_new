{% extends 'base.html.twig' %}

{% block title %}Création autre vente{% endblock %}

{% block app_ct %}
<div class="box">
    <div class="box-header">CREATION AUTRE SERVICE</div><br>
</div>
<table class="table bordure" style="width:100%;">
    <tbody>
        <tr>
            <td style="width:50%;">
                <div class="box" style="height:300px;">
                    <div class="entete-formulaire">Feuille de caisse</div><hr>
                    {{ form_start(form_feuille_de_caisse) }}
                        {{ form_widget(form_feuille_de_caisse) }}
                        <button class="btn btn-success" type="submit" style="float:right">
                            Générer
                        </button>
                    {{ form_end(form_feuille_de_caisse) }}
                </div>
            </td>
            <td style="width:50%;">
                <div class="box" style="height:300px;">
                    <div class="entete-formulaire">Bilan</div><hr>
                    {{ form_start(form_bilan) }}
                        {{ form_widget(form_bilan) }}
                        <button class="btn btn-success" type="submit" style="float:right">
                            Générer
                        </button>
                    {{ form_end(form_bilan) }}
                </div>
            </td>
        </tr>
    </tbody>
</table>
<div class="box">
    <div class="entete-formulaire">Recherche</div><br>
    <div>
        <table class="table" style="width:100%;">
            <tbody>
                <tr>
                    <td style="width:33%;">
                        <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_reception_recherche_reception_duplicata') }}">
                            <div class="">
                                <strong>Par numéro d'immatriculation :</strong><br>
                                <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
                                <input type="text" name="search-immatriculation" id="search-immatriculation" class="form-control" placeholder="numéro d'immatriculation...">
                                <button class="btn btn-primary" type="submit" style="float:right">
                                    Rechercher
                                </button>
                            </div>
                        </form>
                    </td>
                    <td style="width:33%;">
                        <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_reception_recherche_reception_duplicata') }}">
                            <div class="">
                                <strong>Par numéro dans la série du type :</strong><br>
                                <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
                                <input type="text" name="search-numero-serie" id="search-numero-serie" class="form-control" placeholder="numéro de série...">
                                <button class="btn btn-primary" type="submit" style="float:right">
                                    Rechercher
                                </button>
                            </div>
                        </form>
                    </td>
                    <td style="width:33%;">
                        <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('app_ct_app_reception_recherche_reception_duplicata') }}">
                            <div class="">
                                <strong>Sans identification ou immatriculation :</strong><br><br><br>
                                <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
                                {# <input type="text" name="search-numero-serie" id="search-numero-serie" class="form-control" placeholder="numéro de série..."> #}
                                <button class="btn btn-primary" type="submit" style="float:right">
                                    Rechercher
                                </button>
                            </div>
                        </form>
                    </td>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
