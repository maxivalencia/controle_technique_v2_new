{% extends 'base.html.twig' %}

{% block title %}Liste des types de service{% endblock %}

{% block app_ct %}

<div class="box">
    <div class="box-header">TOTAL TYPE SERVICE : {{ total }}</div><br>
    <div>
        <div>
            <a href="#" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un type de service</a>
        </div>
        <div class="marge-elts">
            <table class="table liste">
                <thead>
                    <tr>
                        <th>Libellé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ct_usage_imprime_technique in ct_usage_imprime_techniques %}
                    <tr>
                        <td>{{ ct_usage_imprime_technique.uitLibelle }}</td>
                        <td>
                            <a href="#" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                            <a href="#" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <a href="#" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer un type de service</a>
        </div>
    </div>
</div>
{% endblock %}
