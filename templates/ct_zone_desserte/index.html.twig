{% extends 'base.html.twig' %}

{% block title %}Liste Zone Desserté{% endblock %}

{% block body %}
    <div class="box-header">Liste Zone Desserté</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_zone_desserte in ct_zone_dessertes %}
            <tr>
                <td>{{ ct_zone_desserte.id }}</td>
                <td>{{ ct_zone_desserte.zdLibelle }}</td>
                <td>
                    <a href="{{ path('app_ct_zone_desserte_show', {'id': ct_zone_desserte.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_zone_desserte_edit', {'id': ct_zone_desserte.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_zone_dessertes) }}
    </div> #}

    <a href="{{ path('app_ct_zone_desserte_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
