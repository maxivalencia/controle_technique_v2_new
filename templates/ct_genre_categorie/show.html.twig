{% extends 'base.html.twig' %}

{% block title %}Catégorie du Genre{% endblock %}

{% block body %}
    <div class="box-header">Categorie du Genre</div><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_genre_categorie.id }}</td>
            </tr>
            <tr>
                <th>libellé</th>
                <td>{{ ct_genre_categorie.gcLibelle }}</td>
            </tr>
            <tr>
                <th>est-calculable</th>
                <td>{{ ct_genre_categorie.gcIsCalculable ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
	
	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_genre_categorie_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_genre_categorie_edit', {'id': ct_genre_categorie.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_genre_categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
