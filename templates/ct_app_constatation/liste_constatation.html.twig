{% extends 'base.html.twig' %}

{% block title %}Liste Constatation{% endblock %}

{% block app_ct %}

<div class="box">
    <div class="box-header">TOTAL TYPE CONSTATATION : {{ total }}</div><br>
    <div>
        <div>
            <a href="{{ path('app_ct_app_constatation_creer_constatation_avant_dedouanement') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer une constatation avant dédouanement</a>
        </div>
        <div class="marge-elts">
            <table class="table liste">
                <thead>
                    <tr>
                        <th>Numéro PV</th>
                        <th>Provenance</th>
                        <th>Propriétaire</th>
                        <th>Numéro immatriculation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ct_const_av_ded in ct_const_av_deds %}
                    <tr>
                        <td>{{ ct_const_av_ded.cad_numero }}</td>
                        <td>{{ ct_const_av_ded.cad_provenance }}</td>
                        <td>{{ ct_const_av_ded.cad_proprietaire_nom }}</td>
                        <td>{{ ct_const_av_ded.cad_immatriculation }}</td>
                        <td>
                            <a href="{{ path('app_ct_app_constatation_voir_constatation_avant_dedouanement', {'id': ct_const_av_ded.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                            <a href="{{ path('app_ct_app_constatation_modification_constatation_avant_dedouanement', {'id': ct_const_av_ded.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            <a href="{{ path('app_ct_app_constatation_creer_constatation_avant_dedouanement') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer une constatation avant dédouanement</a>
        </div>
    </div>
</div>
{% endblock %}
