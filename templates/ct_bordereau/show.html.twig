{% extends 'base.html.twig' %}

{% block title %}Bordereau{% endblock %}

{% block body %}
    <div class="box-header">Bordereau</div><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct_bordereau.id }}</td>
            </tr>
            <tr>
                <th>numéro</th>
                <td>{{ ct_bordereau.blNumero }}</td>
            </tr>
            <tr>
                <th>début numéro</th>
                <td>{{ ct_bordereau.blDebutNumero }}</td>
            </tr>
            <tr>
                <th>fin numéro</th>
                <td>{{ ct_bordereau.blFinNumero }}</td>
            </tr>
            <tr>
                <th>created_at</th>
                <td>{{ ct_bordereau.blCreatedAt ? ct_bordereau.blCreatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>updated_at</th>
                <td>{{ ct_bordereau.blUpdatedAt ? ct_bordereau.blUpdatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Reférence expression</th>
                <td>{{ ct_bordereau.refExpr }}</td>
            </tr>
            <tr>
                <th>Date reférence expression</th>
                <td>{{ ct_bordereau.dateRefExpr ? ct_bordereau.dateRefExpr|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>observation</th>
                <td>{{ ct_bordereau.blObservation }}</td>
            </tr>
        </tbody>
    </table>
	
	<table class="table" style="width:450px;">
        <tbody>
            <tr>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_bordereau_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </td>
                <td style="width:150px;">
                    <a href="{{ path('app_ct_bordereau_edit', {'id': ct_bordereau.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </td>
                <td style="width:150px;">
                    {{ include('ct_bordereau/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
