{% extends 'base.html.twig' %}

{% block title %}Liste Tarif Usage{% endblock %}

{% block body %}
    <div class="box-header">Liste Tarif Usage</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>année</th>
                <th>prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_usage_tarif in ct_usage_tarifs %}
            <tr>
                <td>{{ ct_usage_tarif.id }}</td>
                <td>{{ ct_usage_tarif.usgTrfAnnee }}</td>
                <td>{{ ct_usage_tarif.usgTrfPrix }}</td>
                <td>
                    <a href="{{ path('app_ct_usage_tarif_show', {'id': ct_usage_tarif.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_usage_tarif_edit', {'id': ct_usage_tarif.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_usage_tarifs) }}
    </div> #}

    <a href="{{ path('app_ct_usage_tarif_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
