{% extends 'base.html.twig' %}

{% block title %}Liste Type Imprime{% endblock %}

{% block body %}
    <div class="box-header">Liste Type Imprime</div><br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_type_imprime in ct_type_imprimes %}
            <tr>
                <td>{{ ct_type_imprime.id }}</td>
                <td>{{ ct_type_imprime.titLibelle }}</td>
                <td>
                    <a href="{{ path('app_ct_type_imprime_show', {'id': ct_type_imprime.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_type_imprime_edit', {'id': ct_type_imprime.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ct_type_imprime_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
