{% extends 'base.html.twig' %}

{% block title %}Liste Type Réception{% endblock %}

{% block body %}
    <div class="box-header">Liste Type Réception</div><br>

    <table class="table liste">
        <thead>
            <tr>
                <th>Id</th>
                <th>libellé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ct_type_reception in ct_type_receptions %}
            <tr>
                <td>{{ ct_type_reception.id }}</td>
                <td>{{ ct_type_reception.tprcpLibelle }}</td>
                <td>
                    <a href="{{ path('app_ct_type_reception_show', {'id': ct_type_reception.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('app_ct_type_reception_edit', {'id': ct_type_reception.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(ct_type_receptions) }}
    </div> #}

    <a href="{{ path('app_ct_type_reception_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter</a>
{% endblock %}
